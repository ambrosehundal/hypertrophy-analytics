<p id="notice"><%= notice %></p>


<h2><%= @exercise.name %></h2>

<h1> Sets</h1>
<table>
  <thead>
    <tr>
      <th>Weight lbs</th>
      <th>Reps</th>
      <th>Previous</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exercise_sets.each do |exercise_set| %>
      <tr>
        <td><%= exercise_set.weight_lbs %></td>
        <td><%= exercise_set.reps %></td>
        <td><%= exercise_set.previous %></td>
        <td><%= exercise_set.notes %></td>
        <td><%= link_to 'Show', exercise_set %></td>
        <td><%= link_to 'Edit', edit_exercise_set_path(exercise_set) %></td>
        <td><%= link_to 'Destroy', exercise_set, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Exercise Set', new_exercise_exercise_set_path %>
